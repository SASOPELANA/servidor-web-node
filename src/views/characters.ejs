<div class="max-w-7xl mx-auto my-8 px-2">

    <div class="flex justify-center text-2xl md:text-3xl font-bold">
        Personajes y Características
    </div>

    <ul class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 p-2 xl:p-5">

        <% characters.results.forEach(character => { %>
            <li class="relative bg-white flex flex-col justify-between border rounded shadow-md hover:shadow-teal-200">

                <div class="relative">
                    <img class="rounded relative w-full object-contain aspect-video mt-8"
                         src="<%= character.image %>" alt="<%= character.name %>" loading="lazy">
                </div>


                <div class="flex flex-col justify-beetween gap-3 px-4 py-2">
                    <div
                            class="flex justify-center items-center text-xl font-semibold text-teal-500 hover:text-teal-800 two-lines text-ellipsis">
                        <span><%= character.name %></span>
                    </div>

                    <p class="text-gray-600 two-lines">
                        Especie: <%= character.species %><br>
                        Origen: <%= character.origin.name %>
                    </p>


                    <ul class="flex flex-wrap items-center justify-start text-sm gap-2">
                        <li title="Status"
                            class="flex items-center cursor-pointer gap-0.5 bg-gray-100 text-black px-2 py-0.5 rounded-full">
                            <span>Estado: <%= character.status %></span>
                        </li>

                    </ul>

                    <ul class="flex flex-wrap text-sm gap-2 my-1">
                        <li class="flex items-center gap-2">
                            <span>Localización: <%= character.location.name %></span>
                        </li>
                        <br>

                        <li class="flex items-center gap-2">
                            <span>N° <%= character.id %></span>
                        </li>
                    </ul>
                </div>

            </li>
        <% }) %>

    </ul>

</div>