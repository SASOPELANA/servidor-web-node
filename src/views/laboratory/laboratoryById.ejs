<div class="mb-12">
    <a href="/api/laboratory" class="inline-flex items-center text-slate-400 hover:text-green-400 transition-colors font-medium mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Volver a la lista
    </a>
    
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
        <div>
            <span class="text-xs font-mono text-green-500 uppercase tracking-widest mb-2 block">Expediente de Laboratorio</span>
            <h1 class="text-5xl md:text-6xl font-black text-white leading-none">
                <%= resLocation.name %>
            </h1>
        </div>
        
        <a href="/api/laboratory/<%= resLocation.id %>/edit" class="inline-flex items-center px-6 py-3 bg-white/5 border border-white/10 text-white font-bold rounded-xl hover:bg-white/10 transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Editar Personaje
        </a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
    <!-- Sidebar / Image -->
    <div class="lg:col-span-4 space-y-8">
        <div class="relative group">
            <div class="absolute -inset-1 bg-linear-to-r from-green-500/20 to-blue-500/20 rounded-3xl blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
            <div class="relative bg-slate-900 rounded-2xl overflow-hidden border border-white/10 shadow-2xl">
                <% if (resLocation.image) { %>
                    <img src="<%= resLocation.image %>" alt="<%= resLocation.name %>" class="w-full aspect-square object-cover">
                <% } else { %>
                    <div class="w-full aspect-square flex items-center justify-center bg-slate-800">
                         <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-slate-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </div>
                <% } %>
                
                <div class="p-6 bg-slate-900/80 backdrop-blur-md border-t border-white/5">
                    <div class="flex items-center justify-between mb-4">
                        <span class="text-sm font-medium text-slate-400">Estado</span>
                        <span class="px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-wider border <%= resLocation.status === 'Alive' ? 'bg-green-500/20 text-green-400 border-green-500/30' : resLocation.status === 'Dead' ? 'bg-red-500/20 text-red-400 border-red-400/30' : 'bg-slate-500/20 text-slate-400 border-slate-500/30' %>">
                            <%= resLocation.status %>
                        </span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm font-medium text-slate-400">Género</span>
                        <span class="text-sm font-bold text-white"><%= resLocation.gender %></span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="bg-slate-900/50 border border-white/10 rounded-2xl p-6">
            <h3 class="text-white font-bold mb-4 flex items-center">
                <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-2"></span>
                Metadatos
            </h3>
            <div class="space-y-4">
                <div>
                    <label class="block text-[10px] uppercase tracking-widest text-slate-500 font-bold mb-1">ID Global</label>
                    <code class="text-xs bg-black/30 p-2 rounded block text-green-400/80">#<%= resLocation.id %></code>
                </div>
                <div>
                    <label class="block text-[10px] uppercase tracking-widest text-slate-500 font-bold mb-1">Fecha de Registro</label>
                    <span class="text-sm text-slate-300"><%= resLocation.created %></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content / Details -->
    <div class="lg:col-span-8 space-y-8">
        <div class="bg-slate-900/50 border border-white/10 rounded-3xl p-8 md:p-12 shadow-inner">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                <div class="space-y-8">
                    <section>
                        <h3 class="text-xs font-black uppercase tracking-widest text-green-500 mb-4 flex items-center">
                             Biología
                        </h3>
                        <div class="space-y-6">
                            <div>
                                <span class="text-slate-500 text-sm block mb-1">Especie</span>
                                <p class="text-xl font-bold text-white"><%= resLocation.species %></p>
                            </div>
                            <div>
                                <span class="text-slate-500 text-sm block mb-1">Tipo / Subclase</span>
                                <p class="text-xl font-bold text-white"><%= resLocation.type || 'N/A' %></p>
                            </div>
                        </div>
                    </section>

                    <section>
                        <h3 class="text-xs font-black uppercase tracking-widest text-blue-400 mb-4 flex items-center">
                             Origen
                        </h3>
                        <div class="space-y-6">
                            <div>
                                <span class="text-slate-500 text-sm block mb-1">Nombre del Origen</span>
                                <p class="text-xl font-bold text-white"><%= resLocation.origin_name %></p>
                            </div>
                            <div>
                                <span class="text-slate-500 text-sm block mb-1">Localización de Origen</span>
                                <a href="<%= resLocation.origin_url %>" class="text-blue-400 hover:text-blue-300 transition-colors text-sm break-all font-mono"><%= resLocation.origin_url || 'No disponible' %></a>
                            </div>
                        </div>
                    </section>
                </div>

                <div class="space-y-8">
                    <section>
                        <h3 class="text-xs font-black uppercase tracking-widest text-purple-400 mb-4 flex items-center">
                             Localización Actual
                        </h3>
                        <div class="space-y-6">
                            <div>
                                <span class="text-slate-500 text-sm block mb-1">Localización</span>
                                <p class="text-xl font-bold text-white"><%= resLocation.location_name %></p>
                            </div>
                            <div>
                                <span class="text-slate-500 text-sm block mb-1">URL de Localización</span>
                                <a href="<%= resLocation.location_url %>" class="text-purple-400 hover:text-purple-300 transition-colors text-sm break-all font-mono"><%= resLocation.location_url || 'No disponible' %></a>
                            </div>
                        </div>
                    </section>

                    <section>
                        <h3 class="text-xs font-black uppercase tracking-widest text-slate-300 mb-4 flex items-center">
                             Apariciones
                        </h3>
                        <div>
                            <span class="text-slate-500 text-sm block mb-1">Episodios Registrados</span>
                            <div class="flex flex-wrap gap-2 mt-2">
                                <% 
                                let episodeList = [];
                                try {
                                    episodeList = JSON.parse(resLocation.episode || '[]');
                                } catch(e) {
                                    episodeList = resLocation.episode ? [resLocation.episode] : [];
                                }
                                %>
                                <% if (episodeList.length > 0) { %>
                                    <span class="px-3 py-1 bg-slate-800 rounded text-xs font-mono text-slate-300 border border-white/5">
                                        Visto en <%= episodeList.length %> episodios
                                    </span>
                                <% } else { %>
                                    <span class="text-sm text-slate-500 italic">Sin registros</span>
                                <% } %>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
            
            <div class="mt-12 pt-8 border-t border-white/10">
                 <span class="text-slate-500 text-sm block mb-1">URL Interna de API</span>
                 <a href="<%= resLocation.url %>" class="text-green-500/70 hover:text-green-400 transition-colors text-xs font-mono break-all"><%= resLocation.url %></a>
            </div>
        </div>
    </div>
</div>
